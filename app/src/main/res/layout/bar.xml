<LinearLayout
   xmlns:tools="http://schemas.android.com/tools"
 xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3E3E3"
    tools:context=".Bar">
    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:text="Discussion"
        android:layout_gravity="center_horizontal"

        android:src="@drawable/logo2"
         />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Discussion"
        android:layout_gravity="center_horizontal"
        android:id="@+id/buttonDus"
        android:src="@drawable/d"
        android:paddingTop="0dp"


        android:onClick="onClickbutton" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Liste des Utilisateurs"
        android:id="@+id/buttonListe"
        android:src="@drawable/u"
        android:layout_gravity="center_horizontal"
        android:paddingTop="0dp"
        android:layout_below="@+id/buttonDus"

        android:onClick="onClickbutton" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/c"
        android:id="@+id/buttonCR"
        android:layout_below="@+id/buttonListe"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickbutton"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"

        android:id="@+id/buttonP"
        android:layout_below="@+id/buttonCR"
        android:src="@drawable/p"
        android:onClick="onClickbutton" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/buttonDx"
        android:src="@drawable/dx"
        android:onClick="onClickbutton" />

</LinearLayout>